<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity">

    <TextView
        android:id="@id/title"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textSize="20dp"
        android:text="Manage Your Supply"
        app:layout_constraintTop_toTopOf="parent"/>

    <TextView
        android:id="@+id/content1"
        android:layout_width="200dp"
        android:layout_height="50dp"
        android:padding="10dp"
        android:textSize="15dp"
        app:layout_constraintBottom_toTopOf="@id/addsupply"
        app:layout_constraintTop_toBottomOf="@id/title"
        />
    <Button
        android:id="@+id/addsupply"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:clickable="true"
        android:text="add supply"
        android:textSize="15dp"
        app:layout_constraintTop_toBottomOf="@id/content1" />

    <FrameLayout
        android:id="@+id/fragment"
        android:name="android.example.homejoy.AddSupply"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        tools:layout="@layout/fragment_add_supply" />

</android.support.constraint.ConstraintLayout>